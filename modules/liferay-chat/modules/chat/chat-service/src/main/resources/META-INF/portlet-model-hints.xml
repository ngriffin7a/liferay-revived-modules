<?xml version="1.0"?>

<model-hints>
	<model name="com.liferay.chat.model.Entry">
		<field name="entryId" type="long" />
		<field name="createDate" type="long" />
		<field name="fromUserId" type="long" />
		<field name="toUserId" type="long" />
		<field name="content" type="String">
			<hint name="max-length">1000</hint>
		</field>
		<field name="flag" type="int" />
	</model>
	<model name="com.liferay.chat.model.Status">
		<field name="statusId" type="long" />
		<field name="userId" type="long" />
		<field name="modifiedDate" type="long" />
		<field name="online" type="boolean" />
		<field name="awake" type="boolean" />
		<field name="activePanelIds" type="String">
			<hint-collection name="TEXTAREA" />
		</field>
		<field name="message" type="String">
			<hint-collection name="TEXTAREA" />
		</field>
		<field name="playSound" type="boolean" />
	</model>
</model-hints>